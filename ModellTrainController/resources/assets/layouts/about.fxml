               <image>
                  <Image url="@../textures/logo/logo.png" />
               </image>
            </ImageView>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%window.train_controller" VBox.vgrow="ALWAYS">
